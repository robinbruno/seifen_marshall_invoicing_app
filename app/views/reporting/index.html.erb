<div class="container">
  <h1>Reporting</h1>

  <ul class="nav nav-tabs" id="reporting-tab" role="tablist">
    <li class="nav-item" role="presentation">
      <a class="nav-link active" id="month-tab" data-toggle="tab" href="#month" role="tab" aria-controls="month" aria-selected="true">Month</a>
    </li>
    <li class="nav-item" role="presentation">
      <a class="nav-link" id="quarter-tab" data-toggle="tab" href="#quarter" role="tab" aria-controls="quarter" aria-selected="false">Quarter</a>
    </li>
    <li class="nav-item" role="presentation">
      <a class="nav-link" id="year-tab" data-toggle="tab" href="#year" role="tab" aria-controls="year" aria-selected="false">Year</a>
    </li>
  </ul>

  <div class="tab-content" id="reporting-tab-content">
    <div class="tab-pane fade show active" id="month" role="tabpanel" aria-labelledby="month-tab">
      <%= render 'monthly_report', months: @months, years: @years %>
    </div>
    <div class="tab-pane fade" id="quarter" role="tabpanel" aria-labelledby="quarter-tab">
      <%= render 'quarterly_report', quarters: @quarters %>
    </div>
    <div class="tab-pane fade" id="year" role="tabpanel" aria-labelledby="year-tab">
      <%= render 'yearly_report', years: @years %>
    </div>
  </div>
</div>
