<div class="login-container d-flex flex-column align-items-center justify-content-center">
  <div class="login-card p-5">
    <h2 class="text-center mb-4">Log in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" },
                    wrapper_html: { class: 'form-group' } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" },
                    wrapper_html: { class: 'form-group' } %>
        <%= f.input :remember_me, as: :boolean, wrapper_html: { class: 'form-group' } if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions text-center">
        <%= f.button :submit, "Log in", class: 'btn btn-primary' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
