<div class="clients-container d-flex flex-column align-items-center justify-content-center">
  <p style="color: green"><%= notice %></p>

  <div class="clients-card text-center p-5">
    <h1 class="clients-title">Clients</h1>
  </div>

  <div id="clients">
    <% @clients.each do |client| %>
      <%= render client %>
      <p>
        <%= link_to "Show this client", client %>
      </p>
    <% end %>
  </div>

  <div class="d-flex justify-content-center mt-4">
    <%= link_to "New client", new_client_path, class: 'btn btn-success mr-2 mx-4' %>
    <%= link_to 'Back to Home', root_path, class: 'btn btn-outline-secondary mx-1' %>
  </div>
</div>
