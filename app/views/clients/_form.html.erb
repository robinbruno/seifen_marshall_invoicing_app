<!-- app/views/clients/_form.html.erb -->
<div class="new-client-container d-flex flex-column align-items-center justify-content-center">
  <div class="new-client-card p-5">
    <%= form_with(model: client) do |form| %>
      <% if client.errors.any? %>
        <div id="error_explanation" style="color: red">
          <h2><%= pluralize(client.errors.count, "error") %> prohibited this client from being saved:</h2>
          <ul>
            <% client.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :contact_information %>
        <%= form.text_area :contact_information, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :payment_method %>
        <%= form.select :payment_method, options_for_select([['Überweisung', 'Überweisung'], ['Bar', 'Bar']]), class: 'form-control' %>
      </div>

      <div class="actions text-center">
        <%= form.submit class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
