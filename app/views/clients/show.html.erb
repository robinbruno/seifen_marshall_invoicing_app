<p style="color: green"><%= notice %></p>

<%= render @client %>

<div class="d-flex flex-column align-items-center">
  <div class="d-flex justify-content-between mt-2">
    <%= link_to "Edit this client", edit_client_path(@client), class: "btn btn-primary mx-1" %>
    <%= link_to "Back to clients", clients_path, class: "btn btn-secondary mx-1" %>
  </div>
  <div class="d-flex mt-2">
    <%= button_to "Destroy this client", @client, method: :delete, class: "btn btn-outline-danger mx-1" %>
    <%= link_to 'Back to Home', root_path, class: "btn btn-outline-secondary mx-1" %>
  </div>
</div>
