<!-- app/views/home/index.html.erb -->
<div class="d-flex justify-content-center align-items-center mt-5">
  <div class="card text-center p-4" style="width: 800px;">
    <h1 class="display-4 text-primary">Welcome to the Seifen Marshall Invoicing Application</h1>
    <h2 class="text-secondary">Generate PDF invoices in (almost) one blink</h2>
  </div>
</div>

<div class="my-3 d-flex flex-column align-items-center">
  <div class="d-flex justify-content-between mb-3">
    <%= link_to 'New Client', new_client_path, class: 'btn btn-primary btn-lg' %>
    <%= link_to 'New Invoice', new_invoice_path, class: 'btn btn-primary btn-lg' %>
  </div>
  <div class="d-flex justify-content-between">
    <% if user_signed_in? %>
      <%= link_to 'Edit Profile', edit_user_registration_path, class: 'btn btn-primary btn-lg' %>
    <% else %>
      <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-primary btn-lg' %>
      <%= link_to 'Log In', new_user_session_path, class: 'btn btn-primary btn-lg' %>
    <% end %>
  </div>
</div>
