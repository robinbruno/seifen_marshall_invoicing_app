<!-- app/views/home/index.html.erb -->
<h1>Welcome to the Seifen Marshall Invoicing Application</h1>
<h2>Generate PDF invoices in (almost) one blink</h2>

<div class="my-3">
  <%= link_to 'New Client', new_client_path, class: 'btn btn-primary btn-lg d-block mb-3' %>
  <%= link_to 'New Invoice', new_invoice_path, class: 'btn btn-primary btn-lg d-block mb-3' %>
  <% if user_signed_in? %>
    <%= link_to 'Edit Profile', edit_user_registration_path, class: 'btn btn-primary btn-lg d-block mb-3' %>
  <% else %>
    <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-primary btn-lg d-block mb-3' %>
    <%= link_to 'Log In', new_user_session_path, class: 'btn btn-primary btn-lg d-block' %>
  <% end %>
</div>
