<div class="front-page-container d-flex flex-column align-items-center justify-content-center">
  <div class="front-page-card text-center p-5">
    <h1 class="front-page-title">Welcome to the Seifen Marshall Invoicing Application</h1>
    <p class="front-page-description">Generate PDF invoices quickly and easily with our intuitive web app.</p>
  </div>
  <div class="d-flex justify-content-center mt-4">
    <%= link_to 'New Client', new_client_path, class: 'custom-btn mx-1' %>
    <%= link_to 'New Invoice', new_invoice_path, class: 'custom-btn mx-1' %>
  </div>
  <div class="d-flex justify-content-center mt-3">
    <% if user_signed_in? %>
      <%= link_to 'Edit Profile', edit_user_registration_path, class: 'custom-btn mx-1' %>
    <% else %>
      <%= link_to 'Sign Up', new_user_registration_path, class: 'custom-btn mx-1' %>
      <%= link_to 'Log In', new_user_session_path, class: 'custom-btn mx-1' %>
    <% end %>
  </div>
</div>
